{
    "version": "2.0.0",
    "tasks": [{
        "label": "Run Zendesk Backup",
        "type": "shell",
        "command": "cmd",
        "args": [
            "/c",
            "${workspaceFolder}\\.venv\\Scripts\\python.exe C:\\Users\\angusmclauchlan\\Projects\\itsolver\\zendesk\\backup_zendesk_all.py"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "reveal": "always",
            "panel": "new"
        },
        "runOptions": {
            "runOn": "folderOpen"
        }
    },
    {
        "label": "GCloud Auth",
        "type": "shell",
        "command": "gcloud auth application-default login"
    },
    {
        "label": "Check Cloud Run Errors (Auto-Run)",
        "type": "shell",
        "command": "$timestamp = Get-Date -Format 'yyyyMMdd-HHmmss'; $file = \"${workspaceFolder}/../customer-support/_issues-current/errors-$timestamp.json\"; gcloud logging read 'resource.labels.service_name=\"customer-support\" AND severity>=ERROR' --project=billing-sync --freshness=6h --format=json --limit=100 > $file; if (Test-Path $file -and (Get-Item $file).Length -gt 2) { Write-Host \"`n⚠️  Errors found! Log saved to: $file`nIf errors found above, troubleshoot in a new Agent Chat (Ask mode) with the log file\" -ForegroundColor Yellow } else { Write-Host \"✓ No errors found in the past 6 hours\" -ForegroundColor Green }",
        "options": {
            "shell": {
                "executable": "pwsh.exe",
                "args": ["-Command"]
            },
            "cwd": "${workspaceFolder}"
        },
        "runOptions": {
            "runOn": "folderOpen"
        },
        "problemMatcher": [],
        "presentation": {
            "reveal": "always",
            "panel": "new",
            "focus": false
        },
        "isBackground": false
    },
    {
        "label": "Save Cloud Run Errors to File",
        "type": "shell",
        "command": "gcloud logging read 'resource.labels.service_name=\"customer-support\" AND severity>=ERROR' --project=billing-sync --freshness=6h --format=json --limit=100 > \"${workspaceFolder}/../customer-support/_issues-current/errors-$(Get-Date -Format 'yyyyMMdd-HHmmss').json\" && echo \"If errors found above, troubleshoot in a new Agent Chat (Ask mode) with the log file\"",
        "options": {
            "shell": {
                "executable": "pwsh.exe",
                "args": ["-Command"]
            },
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "presentation": {
            "reveal": "always",
            "panel": "new"
        }
    },
    {
        "label": "Fetch All Cloud Run Logs",
        "type": "shell",
        "command": "gcloud",
        "args": [
            "logging",
            "read",
            "resource.labels.service_name=\"customer-support\"",
            "--project=billing-sync",
            "--freshness=6h",
            "--format=json",
            "--limit=500"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "presentation": {
            "reveal": "always",
            "panel": "new"
        }
    },
    {
        "label": "Save All Logs to File",
        "type": "shell",
        "command": "gcloud logging read 'resource.labels.service_name=\"customer-support\"' --project=billing-sync --freshness=6h --format=json --limit=1000 > \"${workspaceFolder}/../customer-support/_issues-current/logs-$(Get-Date -Format 'yyyyMMdd-HHmmss').json\"",
        "options": {
            "shell": {
                "executable": "pwsh.exe",
                "args": ["-Command"]
            },
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "presentation": {
            "reveal": "always"
        }
    }]
}